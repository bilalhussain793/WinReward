<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Register">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext3"
        android:layout_margin="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:background="#00ffffff"
            android:drawableRight="@android:drawable/ic_menu_call"
            android:hint="Phone "
            android:inputType="phone"
            android:maxLength="13"
            android:maxLines="1"
            android:singleLine="true"
            android:drawableTint="#0073ff"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="14dp" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext3"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_margin="1dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableRight="@android:drawable/ic_menu_edit"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:drawableTint="@color/button"
            android:background="#00ffffff"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="14dp" />


    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext3"
        android:layout_margin="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:background="#00ffffff"
            android:drawableRight="@android:drawable/ic_dialog_email"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"
            android:drawableTint="@color/button"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="14dp" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext3"
        android:layout_margin="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:background="#00ffffff"
            android:drawableRight="@android:drawable/ic_lock_idle_lock"
            android:hint="Password"
            android:drawableTint="@color/button"
            android:inputType="textPassword"
            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="14dp" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext3"
        android:layout_margin="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_cp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:background="#00ffffff"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:drawableRight="@android:drawable/ic_lock_idle_lock"
            android:drawableTint="@color/button"
            android:maxLines="1"
            android:textSize="14dp"
            android:maxLength="50"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:singleLine="true" />


    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:textColor="@color/button"
            android:text="Gender : "/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/r_group">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Male"
                android:drawableTint="@color/button"
                android:id="@+id/male"
                android:textColor="@color/button"
                android:textSize="13dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Female"
                android:id="@+id/female"
                android:drawableTint="@color/button"
                android:textColor="@color/button"
                android:textSize="13dp"/>
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:textColor="@color/button"
        android:text="Date of Birth"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/sp_day"
            android:gravity="center"
            android:background="@drawable/spinner"></Spinner>
        <Spinner
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/sp_month"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:background="@drawable/spinner"></Spinner>
        <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/et_year"
            android:background="@drawable/spinner"
            android:inputType="number"
            android:maxLength="4"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:hint="Year"
            android:gravity="center"></EditText>

    </LinearLayout>

    <Button
        android:id="@+id/r_btn"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="88dp"
        android:background="@color/button"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext3"
        android:layout_margin="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/refrel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:background="#00ffffff"

            android:hint="Refral (Optional)"
            android:drawableTint="@color/button"

            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/common_google_signin_btn_text_light"
            android:textSize="14dp" />

    </android.support.design.widget.TextInputLayout>



</LinearLayout>